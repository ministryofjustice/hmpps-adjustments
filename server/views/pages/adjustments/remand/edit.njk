{% extends "../../../partials/layout.njk" %}
{% from "./partials/remandSummary.njk" import remandSummary %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - View remand details" %}
{% set mainClasses = "app-container govuk-body" %}

{% block beforeContent %}
  {{ super() }}
  <nav>
    {{ govukBackLink({
      text: "Back",
      href: "/" + model.prisonerDetail.offenderNo + "/remand/view"
    }) }}
  </nav>
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl"><span class="govuk-caption-xl">Adjust release dates</span>
    Edit remand details
  </h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      {{ remandSummary({
        adjustment: model.adjustment,
        offences: model.listOffences(),
        offenderNo: model.prisonerDetail.offenderNo,
        isEdit: true
      }) }}

      <form method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        <div class="govuk-button-group">
          {{ govukButton({
            text: "Save",
            type: submit,
            preventDoubleClick: true
          }) }}

          {{ govukButton({
            text: "Cancel",
            href: "/" + model.prisonerDetail.offenderNo + "/remand/view",
            classes: "govuk-button--secondary"
          }) }}
        </div>
      </form>

    </div>
  </div>
{% endblock %}
