{% extends "../../../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set pageTitle = applicationName + " - View tagged bail" %}
{% set mainClasses = "app-container govuk-body" %}
{% set reviewDeductionsLink = "/" + prisoner.prisonerNumber + "/review-deductions" %}

{% block beforeContent %}
  {{ super() }}
  <nav>
    {{ govukBackLink({
      text: "Back",
      href: "/" + prisoner.prisonerNumber
    }) }}
  </nav>
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-m">
        Special remission details
      </h1>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukTable(
        model.table()
      ) }}
      <div>
        {{ govukButton({
          text: "Add new",
          href: "/" + prisoner.prisonerNumber + "/special-remission/add"
        }) }}
      </div>
    </div>
  </div>
{% endblock %}