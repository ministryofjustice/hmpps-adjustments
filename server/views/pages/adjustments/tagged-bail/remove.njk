{% extends "../../../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set pageTitle = applicationName + " - Delete tagged bail" %}
{% set mainClasses = "app-container govuk-body" %}

{% block beforeContent %}
{{ super() }}
<nav>
    {{ govukBackLink({
    text: "Back",
    href: "/" + prisoner.prisonerNumber + "/tagged-bail/view"
    }) }}
</nav>
{% endblock %}
{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            Delete Tagged Bail details
        </h1>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-m">
            Tagged Bail details
        </h1>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        {{ govukTable(
        model.table()
        ) }}
        <div class="govuk-!-margin-bottom-7">
            <h1 class="govuk-heading-m">
                Are you sure you want to delete the tagged bail?
            </h1>
            {% if model.showUnusedMessage %}
                <p>The updates will change the amount of unused deductions. Check the unused remand alert on NOMIS.</p>
            {% endif %}
        </div>
        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
            <div class="govuk-button-group">
                {{ govukButton({
                text: "Delete record",
                type: submit,
                preventDoubleClick: true,
                attributes: { 'data-qa': 'remove-button' }
                }) }}
                {{ govukButton({
                text: "Cancel",
                classes: "govuk-button--secondary",
                href: "/" + prisoner.prisonerNumber + "/tagged-bail/view"
                }) }}
            </div>
        </form>
    </div>
</div>
{% endblock %}