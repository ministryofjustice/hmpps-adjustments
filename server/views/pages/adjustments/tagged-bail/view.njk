{% extends "../../../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set pageTitle = applicationName + " - View tagged bail" %}
{% set mainClasses = "app-container govuk-body" %}
{% set reviewDeductionsLink = "/" + prisoner.prisonerNumber + "/unused-deductions/review-deductions" %}

{% block beforeContent %}
{{ super() }}
<nav>
    {{ govukBackLink({
    text: "Back",
    href: "/" + prisoner.prisonerNumber
    }) }}
</nav>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            <span class="govuk-caption-xl">Adjustments</span>
            Tagged bail overview
        </h1>
      {% if model.unusedDeductionMessage.unusedDeductionMessage == 'UNSUPPORTED' or  model.unusedDeductionMessage.unusedDeductionMessage == 'NOMIS_ADJUSTMENT' %}
        <div class="govuk-inset-text govuk-!-margin-left-4">
          {{ model.unusedDeductionMessage.getUnusedDeductionMessage() | safe }}
        </div>
      {% endif %}
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-m">
            Tagged bail details
        </h1>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        {{ govukTable(
        model.table()
        ) }}
        <div>
            {{ govukButton({
            text: "Add new",
            href: "/" + prisoner.prisonerNumber + "/tagged-bail/add"
            }) }}
        </div>
    </div>
</div>
{% endblock %}